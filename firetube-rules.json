{
  "rules": {
    ".read": true,
    "comments": {
      "$commentID": {
        ".write": "auth != null && !data.exists()",
        ".validate": "newData.hasChildren(['body', 'id', 'name'])",
        "body": {
          ".validate":"newData.isString()"
        },
        "id": {
          ".validate":"newData.val() == auth.id"
        },
        "name": {
          ".validate":"newData.isString()"
        }
      }
    }
  }
}
